<h2><%= @list.name %></h2>

<p><strong>bookmark</strong></p>
<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item">
      <%= bookmark.comment %>
        <%= link_to "Delete",
          bookmark_path(bookmark),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </li>
    </li>
  <% end %>
</ul>
<br>

<%= link_to "Back to list", root_path  %>
